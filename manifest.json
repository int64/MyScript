{
	"manifest_version": 2,

	"name": "MyScript",
	"version": "0.7",
	
	"permissions": [
		"http://*/*",
		"https://*/*",
		"tabs",
		"activeTab",
		"contentSettings",
		"unlimitedStorage",
		"storage"
	],
	
	"browser_action": {
		"default_title": "Start MyScript",
		"default_popup": "popup.html"
	},
	
	"background": {
		"page": "background.html",
		"persistent": true
	},
	
	"options_page": "options.html",
	
	"content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["jquery.min.js", "popup.js"],
		"run_at": "document_end"
	}]
}